<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="#292A2C"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:contentPadding="15dp">

    <LinearLayout
        android:layout_width="184dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/stadiumPicture"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:padding="5dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/capacity"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:text="Ã–rnek Stadium Arena"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/likeButton"
                android:layout_width="69dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="likeButtonPressed"
                android:paddingHorizontal="5dp"
                android:paddingEnd="50dp"
                app:srcCompat="@drawable/like2" />
        </LinearLayout>

        <TextView
            android:id="@+id/stadiumLocation"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:text="55.555"
            android:textColor="#FFFFFF"
            android:textStyle="normal|italic" />

        <TextView
            android:id="@+id/stadiumName"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:text="Didim"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.cardview.widget.CardView>